<div class="topic-index-wrapper">
  <div class="container">
    <% @favorite_topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <!--書いたコード-->
            <% if favorite.find_by(user_id: @current_user.id, post_id: @post.id) %>
              <%= link_to("/favorites/#{@post.id}/destroy", {method: "post"}) %>
            <% else %>
              <%= link_to("/favorites/#{@post.id}/create", {method: "post"}) %>
            <% end %>
            <!--書いたコード-->
            <% if Like.find_by(user_id: @current_user.id, post_id: @post.id) %>
    　　　　　　　　<%= link_to("/likes/#{@post.id}/destroy", {method: "post"}) do %>
        　　　 　　<span class="fa fa-heart like-btn-unlike"></span>
  　　　　　　　　　　  <% end %>
　　　　　　<% else %>
    　　　　　　　　　<%= link_to("/likes/#{@post.id}/create", {method: "post"}) do %>
    　　　　　 　　　　<span class="fa fa-heart like-btn"></span>
              <% end %>
            <% end %>
            
            <!-- 変数@likes_countを表示してください -->
            <%= @likes_count %>

            <%= image_tag topic.image.url %>
            <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
            <p class="topic-text">
              <%= topic.description %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>